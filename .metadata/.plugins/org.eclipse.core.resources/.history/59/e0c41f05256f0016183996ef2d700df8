#ifndef PIPED_COMMANDS
#define PIPED_COMMANDS

struct Command {
	std::string filename;
	std::vector<std::string> argv;
	std::vector<std::string> envp;

	FILE* input;
	FILE* output;
};

class PipedCommands {
public:
	PipedCommands(const Command& cmd): cmds_{cmd} {}

	PipedCommands Pipe(const Command& cmd) {
		cmds_.push_back(cmd);
		return *this;
	}

	bool PipedCommands::Parse(const std::string& piped_commands_str,
	   	 	 	 	 	   	  PipedCommands* output_piped_commands);

	std::vector<Command> GetCommands() const {
		return cmds_;
	}
private:
	std::vector<Command> cmds_;
};

#endif  // PIPED_COMMANDS
