#include "string_utils.h"

using std::string;
using std::vector;

namespace utils {

vector<string> Split(const string& str, char delim) {
	vector<string> tokens;
	int start = 0;
	for (size_t end = 0; end < str.size(); end++) {
		if (str[end] == delim) {
			if (end > start) {
				tokens.push_back(str.substr(start, end - start));
			}
			start = end + 1;
		}
	}
	if (start < str.size()) {
		tokens.push_back(str.substr(start));
	}
	return tokens;
}

}  // namespace utils
